<form method="POST">
  <div class="form-group row">
    <label for="docLogin" class="col-sm-2 col-form-label">Documento de identidad</label>
    <div class="col-sm-10">
      <input type="number" required="required" class="form-control" id="docLogin" name="docLogin">
    </div>
  </div>
  <div class="form-group row">
    <label for="pswLogin" class="col-sm-2 col-form-label">Constrase√±a</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="pswLogin" name="pswLogin">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Ingresar</button>
    </div>
  </div>
</form>

{{#if mensajeExito}}
<div class="alert alert-success" role="alert">
  {{mensajeExito}}
</div>
{{/if}}
{{#if mensajeError}}
  <div class="alert alert-danger" role="alert">
  {{mensajeError}}
</div>
{{/if}}