{{>navbar}}

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Documento</th>
      <th scope="col">Nombre</th>
      <th scope="col">Correo</th>      
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each listaUsuarios}}
    <tr>
      <td scope="row">{{docUsuario}}</td>
      <td>{{nombreUsuario}}</td>
      <td>{{emailUsuario}}</td>      
      <td><a href="/usuarios/editar/{{docUsuario}}">Editar</a></td>
    </tr>
    {{/each}}
</table>

{{#if mensajeExito}}
<div class="alert alert-success" role="alert">
  {{mensajeExito}}
</div>
{{/if}}
{{#if mensajeError}}
  <div class="alert alert-danger" role="alert">
  {{mensajeError}}
</div>
{{/if}}