{{>navbar}}
<h1>Registro de nuevo usuario</h1>
<form method="POST">
  <div class="form-group row">
    <label for="docUsuario" class="col-sm-2 col-form-label">Documento de identidad</label>
    <div class="col-sm-10">
      <input type="number" required="required" class="form-control" id="docUsuario" name="docUsuario">
    </div>
  </div>
  <div class="form-group row">
    <label for="nombreUsuario" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
      <input type="text" required="required" class="form-control" id="nombreUsuario" name="nombreUsuario">
    </div>
  </div>
  <div class="form-group row">
    <label for="emailUsuario" class="col-sm-2 col-form-label">Correo Electrónico</label>
    <div class="col-sm-10">
      <input type="email" required="required" class="form-control" id="emailUsuario" name="emailUsuario">
    </div>
  </div>
  <div class="form-group row">
    <label for="telUsuario" class="col-sm-2 col-form-label">Telefono</label>
    <div class="col-sm-10">
      <input type="text" required="required" class="form-control" id="telUsuario" name="telUsuario">
    </div>
  </div>
  <div class="form-group row">
    <label for="pswUsuario" class="col-sm-2 col-form-label">Constraseña</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="pswUsuario" name="pswUsuario">
    </div>
  </div>
  <div class="form-group row">
    <label for="pswConfirmaUsuario" class="col-sm-2 col-form-label">Confirmar constraseña</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="pswConfirmaUsuario" name="pswConfirmaUsuario">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
  </div>
</form>

{{#if mensajeExito}}
<div class="alert alert-success" role="alert">
  {{mensajeExito}}
</div>
{{/if}}
{{#if mensajeError}}
  <div class="alert alert-danger" role="alert">
  {{mensajeError}}
</div>
{{/if}}