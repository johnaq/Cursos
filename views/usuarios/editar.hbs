{{>navbar}}
<form action="/usuarios/editar" method="POST">
  <div class="form-group row">
    <label for="docUsuario" class="col-sm-2 col-form-label">Documento de identidad</label>
    <div class="col-sm-10">
      <input type="number" required="required" class="form-control" id="docUsuario" name="docUsuario" readonly value="{{usuario.docUsuario}}">
    </div>
  </div>
  <div class="form-group row">
    <label for="nombreUsuario" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
      <input type="text" required="required" class="form-control" id="nombreUsuario" name="nombreUsuario" value="{{usuario.nombreUsuario}}">
    </div>
  </div>
  <div class="form-group row">
    <label for="emailUsuario" class="col-sm-2 col-form-label">Correo Electr√≥nico</label>
    <div class="col-sm-10">
      <input type="email" required="required" class="form-control" id="emailUsuario" name="emailUsuario" value="{{usuario.emailUsuario}}">
    </div>
  </div>  
  <div class="form-group row">
    <label for="telUsuario" class="col-sm-2 col-form-label">Telefono</label>
    <div class="col-sm-10">
      <input type="text" required="required" class="form-control" id="telUsuario" name="telUsuario" value="{{usuario.telUsuario}}">
    </div>
  </div>
  <div class="form-group row">
    <label for="rolUsuario" class="col-sm-2 col-form-label">Rol</label>
    <div class="col-sm-10">
      <input type="text" required="required" class="form-control" id="rolUsuario" name="rolUsuario" readonly value="{{usuario.rolUsuario}}">
    </div>
  </div>
  <div class="form-group row">
    <label for="newRolUsuario" class="col-sm-2 col-form-label">Nuevo Rol</label>
    <div class="col-sm-10">
      <select class="form-control" name="newRolUsuario" id="newRolUsuario">
          {{#select usuario.rolUsuario}}
          <option value="0" selected="selected">--Seleccionar Nuevo Rol--</option>
          <option value="Coordinador">Coordinador</option>
          <option value="Aspirante">Aspirante</option>
          <option value="Docente">Docente</option>
          {{/select}}
      </select>
    </div>
  </div>  
  <div class="form-group row">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
  </div>
</form>