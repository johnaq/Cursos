<div class="row">
  <h1>Nuevo curso</h1>
</div>
<form method="POST">
  <div class="form-group row">
    <label for="idCurso" class="col-sm-2 col-form-label">ID</label>
    <div class="col-sm-10">
      <input type="number" required="required" class="form-control" id="idCurso" name="idCurso">
    </div>
  </div>
  <div class="form-group row">
    <label for="nombreCurso" class="col-sm-2 col-form-label">Nombre Curso</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="nombreCurso" name="nombreCurso">
    </div>
  </div>
  <div class="form-group row">
    <label for="descripcion" class="col-sm-2 col-form-label">Descripci√≥n</label>
    <div class="col-sm-10">
      <input type="text" required="required" class="form-control" id="descripcion" name="descripcion">
    </div>
  </div>
  <div class="form-group row">
    <label for="valor" class="col-sm-2 col-form-label">Valor</label>
    <div class="col-sm-10">
      <input type="number" required="required" class="form-control" id="valor" name="valor">
    </div>
  </div>
  <div class="form-group row">
    <label for="modalidad" class="col-sm-2 col-form-label">Modalidad</label>
    <div class="col-sm-10">
