      </select>
    </div>
  </div>
  <div class="form-group row">
    <label for="intendidad" class="col-sm-2 col-form-label">Intensidad horaria</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="intendidad" name="intensidad">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
  </div>
