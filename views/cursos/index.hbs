<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Valor</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each listaCursos}}
    <tr>
      <th scope="row">{{nombreCurso}}</th>
      <td>{{descripcion}}</td>
      <td>{{valor}}</td>
      <td><a href="/cursos/{{idCurso}}">Ver mas</a></td>
    </tr>
    {{/each}}
</table>